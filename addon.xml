<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="screensaver.tvtunes" name="TvTunesScreensaver" version="100.4.1" provider-name="latts">
	<requires>
		<import addon="xbmc.python" version="2.20.0"/>
		<import addon="script.module.simplejson" version="3.3.0"/>
		<import addon="service.tvtunes" version="1.0.0"/>
	</requires>
	<extension point="xbmc.ui.screensaver" library="default.py"/>
	<extension point="xbmc.python.script" library="default.py"/>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Plays your themes while showing images for each TV Show or Movie</summary>
		<description lang="en">The TvTunes Screensaver makes use of the themes configured in your library to use them as a screensaver.</description>
		<language></language>
		<platform>all</platform>
		<license>See LICENSE.txt</license>
		<forum>https://github.com/latts9923/screensaver.tvtunes</forum>
		<assets>
			<icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
			<banner>resources/banner.jpg</banner>
			<logo>resources/logo.png</logo>
		</assets>
	</extension>
</addon>
